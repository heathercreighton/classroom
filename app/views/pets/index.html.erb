<p id="notice"><%= notice %></p>

<h1>Our Furry Friends</h1>
<%= link_to 'New Pet', new_pet_path, class: "btn btn-success" %>

    <ul class = "nav nav-pills" role="tablist">
      <li><%= link_to "All Pets", pets_path %></li>
      <% @my_pets.each do |p| %>
        <li><%= link_to p.name, pets_path(name:p.name) %></li> 
      <% end %>  
    </ul>
    



  

  <div class ="row">
    <% @pets.each do |pet| %>
      <div class = "col-md-4">
        <div class = "well">

        <p>Pet's Name: <%= "#{pet.name}" %></p>
        <p>Breed: <%= "#{pet.breed}" %></p>
        <p>Preferred Food: <%="#{pet.food}" %></p>


        <p><%= link_to 'Show', pet, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-primary" %>
        <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></p>
      </div>
    </div>
    <% end %>


</div>


