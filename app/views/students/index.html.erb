<p id="notice"><%= notice %></p>

<h1>Our Fantastic Students</h1>

<%= link_to 'New Student', new_student_path, class: "btn btn-success" %>

  <ul class = "nav nav-pills" role="tablist">

    <li><%= link_to "All Students", students_path %></li>

    <% @my_students.each do |s| %>  
    
       <li><%= link_to s.name, students_path(name:s.name) %></li>
    <% end %>  
  </ul>




  <div class ="row">
    <% @students.each do |student| %>
      <div class="col-md-4">
        <div class ="well">
        <p>Student's Name: <%= "#{student.name}" %></p>
        <p>Table No.: <%= "#{student.table}" %></p>
        <p>Seat No. :<%= "#{student.seat}" %></p>
        <p>Grades Average: <%="#{student.grade}" %></p>

        <p><%= link_to 'Show', student, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_student_path(student),class: "btn btn-primary" %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></p>
      </div>
    </div>
    <% end %>
  </div>


